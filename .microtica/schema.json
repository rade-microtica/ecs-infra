{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://microtica/shared-ecs-cluster.json",
  "title": "Shared ECS Cluster",
  "type": "object",
  "properties": {
    "inputs": {
      "type": "object",
      "properties": {
        "InstanceType": {
          "type": "string",
          "description": "EC2 instance type for ECS cluster",
          "default": "t3.medium",
          "enum": [
            "t3.small",
            "t3.medium",
            "t3.large",
            "t3.xlarge",
            "m5.large",
            "m5.xlarge"
          ],
          "category": "allocation"
        },
        "MinSize": {
          "type": "string",
          "description": "Minimum number of EC2 instances in the ECS cluster",
          "default": "1",
          "category": "autoscaling",
          "subcategory": "replicas"
        },
        "MaxSize": {
          "type": "string",
          "description": "Maximum number of EC2 instances in the ECS cluster",
          "default": "3",
          "category": "autoscaling",
          "subcategory": "replicas"
        },
        "DesiredCapacity": {
          "type": "string",
          "description": "Desired number of EC2 instances in the ECS cluster",
          "default": "2",
          "category": "scaling",
          "subcategory": "replicas"
        },
        "VpcId": {
          "type": "string",
          "description": "VPC ID where resources will be deployed",
          "category": "advanced"
        },
        "PublicSubnet1Id": {
          "type": "string",
          "description": "First public subnet ID (e.g. for ALBs)",
          "category": "advanced"
        },
        "PublicSubnet2Id": {
          "type": "string",
          "description": "Second public subnet ID (e.g. for ALBs)",
          "category": "advanced"
        },
        "PrivateSubnet1Id": {
          "type": "string",
          "description": "First private subnet ID for ECS tasks and EC2 instances",
          "category": "advanced"
        },
        "PrivateSubnet2Id": {
          "type": "string",
          "description": "Second private subnet ID for ECS tasks and EC2 instances",
          "category": "advanced"
        }
      },
      "required": [
        "VpcId",
        "PublicSubnet1Id",
        "PublicSubnet2Id",
        "PrivateSubnet1Id",
        "PrivateSubnet2Id"
      ]
    }
  },
  "additionalProperties": false
}